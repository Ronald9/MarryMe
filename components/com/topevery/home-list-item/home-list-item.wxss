/* components/com/topevery/home-list/home-list.wxss */

.list-item-container {
    /* border: 1px solid blue; */
    display: flex;
    flex-direction: column;
    position: relative;
    margin-top: 20rpx;
    border-radius: 10rpx;
    background-color: white;
}

.list-item-type {
    /* border: 1px solid blue; */
    font-size: 24rpx;
    font-weight: bold;
    margin: 20rpx 40rpx 15rpx 40rpx;
}

.list-item-img {
    width: 100%;
    height: 420rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.list-item-text {
    position: absolute;
    right: 30rpx;
    bottom: 30rpx;
    padding: 10rpx 15rpx;
    color: #fff;
    border-radius: 10rpx;
    background: #e2211c;
    font-size: 24rpx;
}
